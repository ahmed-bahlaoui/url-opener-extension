{
  "manifest_version": 3,
  "name": "Quick Window Opener",
  "version": "1.0",
  "description": "Opens a specified URL in a new window with one click.",
  "permissions": ["windows", "storage"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_icon": {
      "8": "images/favicon8.png",
      "32": "images/favicon32.png",
      "96": "images/favicon96.png"
    },
    "default_title": "Open My Window"
  },
  "icons": {
    "8": "images/favicon8.png",
    "32": "images/favicon32.png",
    "96": "images/favicon96.png"
  },
  "options_page": "options.html"
}
